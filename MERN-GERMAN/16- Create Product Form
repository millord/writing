-import from Form, Input, TextArea, Button, Image, Message, Header, Icon from 'semantic-ui-react'

function CreateProduct() {
  return (
    <>
      <Header as="h2" block>
        <Icon name="add" color="orange" />
        Create New
      </Header>
      <Form>
        <Form.Group widths="equal">
           --HERE THE Form Fields--
        </Form.Group>
      </Form>
    </>
  );
}

--Name Field

<Form.Field
  control={Input}
  name="name"
  label="Name"
  placeholder="Name"
/>

--Price Field

<Form.Field 
 control={Input}
 name="price"
 label="Price"
 placeholder="Price"
 min="0.00"
 step="0.01"
 type="number"
/>
 
--Image Field

<Form.Field 
 control={Input}
 name="media"
 label="Media"
 placeholder="Price"
 type="file"
 accept="image/*"
 content="Select Image"
/>

// Description field

<Form.Field 
 control={TextArea}
 name="description"
 label="Description"
 placeholder="Description"
/>

<Form.Field 
 control={Button}
 color="blue"
 icon="pencil alternate"
 content="Submit"
 type="submit"

/>


